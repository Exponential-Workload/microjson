{
  "name": "@3xpo/microjson",
  "version": "1.0.4",
  "description": "A pure TypeScript JSON parser",
  "main": "dist/lib.js",
  "module": "dist/lib.esm.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build:docs": "typedoc --out docs --tsconfig doctsconfig.json dist/main.d.ts",
    "test": "jest",
    "prepublishOnly": "npm run build && npm run build:docs"
  },
  "exports": {
    ".": {
      "import": "./dist/lib.esm.js",
      "require": "./dist/lib.js"
    },
    "./polyfill": {
      "import": "./dist/polyfill.esm.js",
      "require": "./dist/polyfill.js"
    }
  },
  "author": "Expo",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "rollup": "^3.26.3",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "homepage": "https://microjson.expo.moe",
  "repository": {
    "type": "git",
    "url": "https://github.com/Exponential-Workload/microjson.git"
  }
}